{
  "rules": {
    "activeEvent": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "countries": {
      ".read": "true"
    },
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "groups": {
          "groupNames": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid === $uid"
          }
        }
      }
    },
    "votes": {
      "$eventId": {
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $userId"
        }
      }
    },
    "votingEvents": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "groups": {
      ".read": "auth != null",
      "$groupId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('createdBy').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        "name": {
          ".read": "auth != null",
          ".write": "auth != null && (!data.exists() || root.child('groups').child($groupId).child('createdBy').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)"
        },
        "members": {
          ".read": "auth != null",
          ".write": "auth != null && (!data.exists() || root.child('groups').child($groupId).child('createdBy').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)"
        },
        "createdBy": {
          ".read": "auth != null",
          ".write": "auth != null && (!data.exists() || root.child('groups').child($groupId).child('createdBy').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)"
        }
      }
    }
  }
}
